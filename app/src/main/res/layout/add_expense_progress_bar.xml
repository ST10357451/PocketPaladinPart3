<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top App Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/back_arrow"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/labelExpenses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Expenses"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#000000" />

        <ImageButton
            android:id="@+id/buttonAddExpense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/add_icon"
            android:contentDescription="Add Expense" />
    </LinearLayout>

    <!-- Scrollable content area (now empty for dynamic content) -->

    <!-- Budget Progress Display -->
    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/budgetProgressLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Expense items will be added programmatically or via RecyclerView -->
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/budgetProgressLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@id/customNavBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/labelMonthlyBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Budget"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/buttonEditBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textColor="#4CAF50"
            android:background="@drawable/edittext_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ProgressBar
            android:id="@+id/budgetProgressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:progress="0"
            android:max="100"
            android:progressTint="#4CAF50"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@id/buttonEditBudget"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/textCurrentSpent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spent: $0.00"
            android:textSize="17sp"
            android:textColor="#333"
            app:layout_constraintTop_toBottomOf="@id/budgetProgressBar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textMaxBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budget: $0.00"
            android:textSize="17sp"
            android:textColor="#333"
            app:layout_constraintTop_toBottomOf="@id/budgetProgressBar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/customNavBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:weightSum="5"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/home_icon"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Home"/>



        <ImageButton
            android:id="@+id/navBudgetGoals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_category"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Budget Goals"/>

        <ImageButton
            android:id="@+id/navExpenses"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_expense"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Expenses"/>

        <ImageButton
            android:id="@+id/navPoints"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/points_icon"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Points"/>

        <ImageButton
            android:id="@+id/navSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_settings"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Settings"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
